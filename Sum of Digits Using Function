#include <stdio.h>

int sumOfDigits(int num) {
    int sum = 0, rem;

    while (num != 0) {
        rem = num % 10;
        sum = sum + rem;
        num = num / 10;
    }
    return sum;
}

int main() {
    int num, result;

    printf("Enter a number: ");
    scanf("%d", &num);

    result = sumOfDigits(num);

    printf("Sum of digits = %d", result);

    return 0;
}
