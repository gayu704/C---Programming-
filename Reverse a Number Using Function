#include <stdio.h>

int reverseNumber(int num) {
    int rev = 0, rem;

    while (num != 0) {
        rem = num % 10;
        rev = rev * 10 + rem;
        num = num / 10;
    }
    return rev;
}

int main() {
    int num, result;

    printf("Enter a number: ");
    scanf("%d", &num);

    result = reverseNumber(num);

    printf("Reversed number = %d", result);

    return 0;
}
