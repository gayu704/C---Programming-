#include <stdio.h>

float findAverage(int a, int b, int c) {
    return (a + b + c) / 3.0;
}

int main() {
    int n1, n2, n3;
    float avg;

    printf("Enter three numbers: ");
    scanf("%d %d %d", &n1, &n2, &n3);

    avg = findAverage(n1, n2, n3);

    printf("Average = %.2f", avg);

    return 0;
}
