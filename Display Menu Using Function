#include <stdio.h>

void showMenu() {
    printf("---- MENU ----\n");
    printf("1. Tea\n");
    printf("2. Coffee\n");
    printf("3. Juice\n");
    printf("4. Exit\n");
}

int main() {
    int choice;

    showMenu();

    printf("Enter your choice: ");
    scanf("%d", &choice);

    switch (choice) {
        case 1:
            printf("You selected Tea");
            break;
        case 2:
            printf("You selected Coffee");
            break;
        case 3:
            printf("You selected Juice");
            break;
        case 4:
            printf("Exit");
            break;
        default:
            printf("Invalid choice");
    }

    return 0;
}
