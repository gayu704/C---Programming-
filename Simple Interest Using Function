#include <stdio.h>

float calculateInterest(float p, float r, float t) {
    return (p * r * t) / 100;
}

int main() {
    float principal, rate, time, interest;

    printf("Enter principal amount: ");
    scanf("%f", &principal);

    printf("Enter rate of interest: ");
    scanf("%f", &rate);

    printf("Enter time (years): ");
    scanf("%f", &time);

    interest = calculateInterest(principal, rate, time);

    printf("Simple Interest = %.2f", interest);

    return 0;
}
