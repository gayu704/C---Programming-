#include <stdio.h>
#include <string.h>

struct Item {
    int id;
    char name[20];
    int qty;
    float price;
};

int main() {
    struct Item items[5];
    int choice, n = 0, i, id, found;

    do {
        printf("\n1.Add 2.Display 3.Search 4.Update 5.Exit\nChoice: ");
        scanf("%d", &choice);

        switch(choice) {
            case 1:
                printf("Enter ID Name Qty Price: ");
                scanf("%d %s %d %f", &items[n].id, items[n].name, &items[n].qty, &items[n].price);
                n++;
                break;

            case 2:
                printf("ID\tName\tQty\tPrice\n");
                for(i=0;i<n;i++)
                    printf("%d\t%s\t%d\t%.2f\n", items[i].id, items[i].name, items[i].qty, items[i].price);
                break;

            case 3:
                printf("Enter ID to search: ");
                scanf("%d",&id);
                found=0;
                for(i=0;i<n;i++){
                    if(items[i].id==id){
                        found=1;
                        printf("ID:%d Name:%s Qty:%d Price:%.2f\n", items[i].id, items[i].name, items[i].qty, items[i].price);
                        break;
                    }
                }
                if(!found) printf("Item not found.\n");
                break;

            case 4:
                printf("Enter ID to update: ");
                scanf("%d",&id);
                found=0;
                for(i=0;i<n;i++){
                    if(items[i].id==id){
                        found=1;
                        printf("New Name Qty Price: ");
                        scanf("%s %d %f", items[i].name, &items[i].qty, &items[i].price);
                        printf("Item updated.\n");
                        break;
                    }
                }
                if(!found) printf("Item not found.\n");
                break;

            case 5:
                printf("Exiting...\n");
                break;
        }
    } while(choice != 5);

    return 0;
}
